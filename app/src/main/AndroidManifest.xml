<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deggendorfapp">


    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />




    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PiplelineSearch">


        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />


        <activity
            android:name="com.example.deggendorfapp.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>



        </activity>
        <activity
            android:name="com.example.deggendorfapp.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="com.example.deggendorfapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.deggendorfapp.MainActivity" />
        </activity>

        <activity
            android:name="com.example.deggendorfapp.ExampleActivityBar"
            android:label="@string/example"
            android:parentActivityName="com.example.deggendorfapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.deggendorfapp.MainActivity" />
        </activity>

        <activity
            android:name="com.example.deggendorfapp.SelectingBar"
            android:label="@string/choose_pipeline"
            android:parentActivityName="com.example.deggendorfapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.deggendorfapp.MainActivity" />
        </activity>

        <activity
            android:name="com.example.deggendorfapp.InformationActivity"
            android:label="@string/info"
            android:parentActivityName="com.example.deggendorfapp.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.deggendorfapp.MainActivity" />
        </activity>


    </application>

</manifest>